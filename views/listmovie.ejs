<!DOCTYPE html>
<html lang="en">
<head>
  <title>Student</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

</head>
<body>
  <nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="#">FakeIMDB</a>
    </div>
    <ul class="nav navbar-nav">
      <li class="active"><a href="/users">Home</a></li>
      <li><a href="/movies">Edit List</a></li>
      <li><a href="/logout">Log Out</a></li>
    </ul>
  </div>
  </nav>

  <div class="container">
  <h2>Welcome</h2>
  <h3>Movie List</h3>
  <!-- <%=JSON.stringify(rating)%> -->
  <br>

  <form action="/users/search/" method="POST">
    <input type="text" name="search" placeholder="Search Movie..."><br>
  </form>
  <br>
<table class="table table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th>Movie Name</th>
      <th>Rating</th>
      <th>Option</th>
    </tr>
  </thead>
  <tbody>
    <% movies.forEach(movie =>{ %>
    <tr>
      <td><%=movie.id%></td>
      <td><%=movie.movie_name%></td>
      <td>
        <%if(movie.rating){%>
          <%=movie.rating%>
        <%}else{%>
          Not Rated mamment
        <%}%>
    </td>

      <td><a href="/users/rating/<%= users[0].id%>/<%= movie.id%>">Rate this movie</a>

    </tr>
    <% }) %>
  </tbody>
</table>
</div>
</body>
</html>
